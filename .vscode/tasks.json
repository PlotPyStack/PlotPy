    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßΩ Ruff Formatter",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_with_env.py",
                "${command:python.interpreterPath}",
                "-m",
                "ruff",
                "format",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true,
                },
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell",
        },
        {
            "label": "üî¶ Ruff Linter",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_with_env.py",
                "${command:python.interpreterPath}",
                "-m",
                "ruff",
                "check",
                "--fix",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true,
                },
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell",
        },
        {
            "label": "üßΩüî¶ Ruff",
            "dependsOrder": "sequence",
            "dependsOn": [
                "üßΩ Ruff Formatter",
                "üî¶ Ruff Linter",
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell",
        },
        {
            "label": "üî¶ Pylint",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_with_env.py",
                "${command:python.interpreterPath}",
                "-m",
                "pylint",
                "plotpy",
                "--disable=duplicate-code",
                "--disable=fixme",
                "--disable=too-many-arguments",
                "--disable=too-many-branches",
                "--disable=too-many-instance-attributes",
                "--disable=too-many-lines",
                "--disable=too-many-locals",
                "--disable=too-many-public-methods",
                "--disable=too-many-statements",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell",
        },
        {
            "label": "üîé Scan translations",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_with_env.py",
                "${command:python.interpreterPath}",
                "-m",
                "guidata.utils.translations",
                "scan",
                "--name",
                "plotpy",
                "--directory",
                ".",
                "--copyright-holder",
                "CEA, Codra, Pierre Raybaut",
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell",
        },
        {
            "label": "üìö Compile translations",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_with_env.py",
                "${command:python.interpreterPath}",
                "-m",
                "guidata.utils.translations",
                "compile",
                "--name",
                "plotpy",
                "--directory",
                ".",
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "presentation": {
                "clear": true,

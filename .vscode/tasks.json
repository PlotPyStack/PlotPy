{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßΩ Run Ruff Formatter",
            "command": "ruff",
            "args": [
                "format"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true
            },
            "type": "shell"
        },
        {
            "label": "üî¶ Run Ruff Linter",
            "command": "ruff",
            "args": [
                "check",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell"
        },
        {
            "label": "üî¶ Run Pylint",
            "command": "pylint",
            "args": [
                "plotpy",
                "--disable=C",
                "--disable=fixme",
                "--disable=R",
                "--disable=W",
                "--ignore=external"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true
            },
            "type": "shell"
        },
        {
            "label": "üîé Scan translations",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "guidata.utils.translations",
                "scan",
                "--name",
                "plotpy",
                "--directory",
                ".",
                "--copyright-holder",
                "CEA, Codra, Pierre Raybaut"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "focus": false,
                "panel": "shared",
                "reveal": "always",
                "showReuseMessage": true,
                "clear": false
            },
            "type": "shell",
        },
        {
            "label": "üìö Compile translations",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "guidata.utils.translations",
                "compile",
                "--name",
                "plotpy",
                "--directory",
                ".",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "focus": false,
                "panel": "shared",
                "reveal": "always",
                "showReuseMessage": true,
                "clear": false
            },
            "type": "shell"
        },
        {
            "label": "üöÄ Run pytest",
            "command": "cmd",
            "args": [
                "/c",
                "run_pytest.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell"
        },
        {
            "label": "Update requirements.txt",
            "command": "toml-to-req",
            "args": [
                "--toml-file",
                "pyproject.toml",
                "--optional-lists",
                "dev,doc,test",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true,
            },
            "type": "shell"
        },
        {
            "label": "Run Coverage",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "run_coverage.bat",
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}",
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "üßπ Clean Up",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "clean_up.bat"
            ],
            "options": {
                "cwd": "scripts",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "üì¶ Upgrade PlotPyStack",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "pip",
                "PythonQwt",
                "guidata",
                "PlotPy",
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "‚ö†Ô∏è Upgrade whole environment ‚ö†Ô∏è",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "upgrade_env.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${command:python.interpreterPath}",
                },
                "statusbar": {
                    "hide": true
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build documentation",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1",
                }
            },
            "args": [
                "/c",
                "build_doc.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Python packages",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1",
                },
                "statusbar": {
                    "hide": true
                }
            },
            "args": [
                "/c",
                "build_dist.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Up",
            ]
        },
        {
            "label": "Build all wheels",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1",
                },
                "statusbar": {
                    "hide": true
                }
            },
            "args": [
                "/c",
                "build_wheels.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Up",
            ]
        },
        {
            "label": "Build extensions in place",
            "type": "shell",
            "command": "cmd",
            "options": {
                "cwd": "scripts",
                "env": {
                    "PYTHON": "${command:python.interpreterPath}",
                    "UNATTENDED": "1",
                }
            },
            "args": [
                "/c",
                "build_inplace.bat"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Up",
            ]
        },
        {
            "label": "Display Coverage",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "display_cov.bat",
            ],
            "options": {
                "cwd": "scripts",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
    ]
}